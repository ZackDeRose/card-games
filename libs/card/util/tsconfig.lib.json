{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc/libs/card/util",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "types": [],
    "lib": ["dom", "es2018"],
    "paths": {
      "@card-games/card-util": [
        "libs/card/util/src/index.ts"
      ],
      "@card-games/card-ui": [
        "libs/card/ui/src/index.ts"
      ],
      "@card-games/feature-mem-single": [
        "libs/memory-game/single-player/feature-shell/src/index.ts"
      ],
      "@card-games/ui-mem": [
        "libs/memory-game/ui/src/index.ts"
      ],
      "@card-games/util-mem": [
        "libs/memory-game/util/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableResourceInlining": true
  },
  "exclude": ["src/test.ts", "**/*.spec.ts"]
}
